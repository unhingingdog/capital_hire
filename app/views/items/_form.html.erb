<%= form_for @item, url: items_path, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.label :specs %><br />
    <%= f.text_field :specs %>
  </div>
  <div class="form-group">
    <%= f.label :category %><br />
    <%= f.select :category_id, options_for_select(Category.all.map{|c|[c.name, c.id]},
                              class: 'category-select') %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :rate %><br />
    <%= f.number_field :rate %> (NZD per day)
  </div>
  <div class="form-group">
    <%= f.label :location %><br />
    <%= f.select :location_id, options_for_select(Location.all.map{|c|[c.name, c.id]}) %>
  </div>
  <%= f.submit "List Item" %>
<% end %>
