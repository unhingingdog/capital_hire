<%= form_for @item, url: items_path, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.label :category %><br />
    <%= f.select(:category, ['Fencing', 'Scaffolding',
                            'Powertools', 'Labour', 'Subcontractors', 'Ladders'], {:prompt => 'Select Category'}) %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :rate %><br />
    <%= f.number_field :rate %> (NZD per day)
  </div>
  <%= f.submit "List Item" %>
<% end %>
