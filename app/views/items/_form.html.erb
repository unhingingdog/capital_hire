<%= form_for(@item) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.select(:category, ['Fencing', 'Scaffolding',
                            'Powertools', 'Labour', 'Subcontractors', 'Ladders'], {:prompt => 'Select Category'}) %>
  </p>
  <p>
    <%= f.label :rate %><br />
    <%= f.number_field :rate %> (NZD per day)
  </p>
  <%= f.submit "List Item" %>
<% end %>
