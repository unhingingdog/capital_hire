<!-- banner -->
<div class="banner">
  <h1>Hire Share</h1>
  <!-- search bar -->
  <div class="home-search-bar">
    <%= form_tag(items_search_results_path, method: :get) do %>
      <%= select_tag(:category, options_for_select(@categories), include_blank: "All") %><br />
      <%= select_tag(:location, options_for_select(@locations), include_blank: "All") %><br />
      <%= text_field_tag :query, params[:query], class: "search-field" %><br />
      <%= submit_tag "Search Equipment", name: nil, class: "search-button" %>
    <% end %>
  </div>
  <!-- search bar end -->
</div>

