<div class="container-fluid">
  <div class="row">

    <!-- banner -->
    <div class="banner">
      <%= image_tag("wheelbarrow.gif") %>
      <h1>Hire Share</h1>
      <!-- buttons -->
      <div class="col-md-12">
        <div class="btn-group btn-custom">
          <button type="button" class="btn btn-default"><%= link_to "Hire Equipment", items_path %></button>
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu">
            <% Category.all.each do |c| %>
              <li><%= link_to c.name, items_path(category: c.name) %></li>
            <% end %>
          </ul>
        </div>
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default"><%= link_to "List Equipment", new_item_path %></button>
        </div>
      </div>
    </div>


  </div><!--row end -->
</div><!--container end -->
